+ Element _

: elementGet (id str < dom:Element)
    return document.getElementById(id)
;;

: elementOn
(
    element dom:Element
    eventName dom:EventName
    handler <event:Event>
)
    element.addEventListener(eventName, handler)
;;

: addClass (element dom:Element class dom:Class)
    element.classList.add(class)
;;

: removeClass (element dom:Element class dom:Class)
    element.classList.remove(class)
;;

: setChecked (element dom:Element checked bool)
    element.checked = checked;
;;
