@toggle(task todos:Task)_
	>> completed (f task.completed)

	# Update the list elements
	if completed
		do dom:addClass(element task.liElement class 'completed')
	else
		do dom:removeClass(element task.liElement class 'completed')
	do dom:setChecked(element task.toggleElement checked completed)
	>> task.completed completed

	# Update the count
	if completed
		>> todos:completedCount (+ todos:completedCount 1)
	else
		>> todos:completedCount (+ todos:completedCount 1)
